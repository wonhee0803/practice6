<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/label_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="시작 값"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edit_start"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/label_start"
        app:layout_constraintTop_toBottomOf="@+id/label_start" />

    <TextView
        android:id="@+id/label_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="종료 값"
        app:layout_constraintStart_toStartOf="@id/edit_start"
        app:layout_constraintTop_toBottomOf="@id/edit_start"/>

    <EditText
        android:id="@+id/edit_end"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/label_end"
        app:layout_constraintTop_toBottomOf="@+id/label_end" />



    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="계산"
        app:layout_constraintStart_toStartOf="@+id/text_result"
        app:layout_constraintTop_toBottomOf="@+id/text_result" />


    <TextView
        android:id="@+id/label_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/edit_end"
        app:layout_constraintTop_toBottomOf="@+id/edit_end"
        tools:text="n부터 k 까지의 합은?"/>

    <TextView
        android:id="@+id/text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/label_result"
        app:layout_constraintTop_toBottomOf="@+id/label_result"
        tools:text="합계"/>

</androidx.constraintlayout.widget.ConstraintLayout>